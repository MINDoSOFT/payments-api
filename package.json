{
  "name": "payments-api",
  "version": "1.0.0",
  "description": "A sample payments API to learn Node.js development",
  "main": "public/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run lint && npm run build && node public/server.js",
    "start-dev": "npm run lint && tsc-watch --onSuccess \"node public/server.js\"",
    "seed": "npm run lint && npm run build && node public/database-seed.js",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' env-cmd -f ./.env-for-test mocha -r ts-node/register 'src/test/**/*.ts' || true",
    "test-integration": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' env-cmd -f ./.env-for-test mocha -r ts-node/register 'src/test/integration/**/*.ts' || true",
    "test-unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' env-cmd -f ./.env-for-test mocha -r ts-node/register 'src/test/unit/**/*.ts' || true",
    "lint": "gts lint",
    "vault-check-app-role": "node vault-tests/check-app-role.js",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MINDoSOFT/payments-api.git"
  },
  "author": "Sergios Stamatis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MINDoSOFT/payments-api/issues"
  },
  "homepage": "https://github.com/MINDoSOFT/payments-api#readme",
  "dependencies": {
    "@mikro-orm/core": "^4.5.10",
    "@mikro-orm/mongo-highlighter": "^1.0.0",
    "@mikro-orm/mongodb": "^4.5.10",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "dotenv": "^14.1.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.2",
    "express-jwt": "^6.1.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^8.2.0",
    "node-vault": "^0.9.22",
    "tsc-watch": "^4.6.0",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/chai-uuid": "^1.0.2",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@types/request": "^2.48.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "chai": "^4.3.4",
    "chai-uuid": "^1.0.6",
    "eslint": "^8.6.0",
    "gts": "^3.1.0",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "sinon": "^12.0.1",
    "supertest": "^6.2.1",
    "ts-node": "^10.4.0",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.5.4"
  },
  "mikro-orm": {
    "useTsNode": true
  }
}

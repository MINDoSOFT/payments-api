{
  "name": "payments-api",
  "version": "1.0.0",
  "description": "A sample payments API to learn Node.js development",
  "main": "public/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run lint && npm run build && node public/index.js",
    "start-dev": "npm run lint && tsc-watch --onSuccess \"node public/index.js\"",
    "seed": "npm run lint && npm run build && node public/database-seed.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "vault-check-app-role": "node vault-tests/check-app-role.js",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MINDoSOFT/payments-api.git"
  },
  "author": "Sergios Stamatis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MINDoSOFT/payments-api/issues"
  },
  "homepage": "https://github.com/MINDoSOFT/payments-api#readme",
  "dependencies": {
    "@mikro-orm/core": "^4.5.10",
    "@mikro-orm/mongo-highlighter": "^1.0.0",
    "@mikro-orm/mongodb": "^4.5.10",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "express": "^4.17.2",
    "express-jwt": "^6.1.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "node-vault": "^0.9.22",
    "tsc-watch": "^4.6.0",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.8",
    "@types/request": "^2.48.8",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "gts": "^3.1.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "mikro-orm": {
    "useTsNode": true
  }
}
